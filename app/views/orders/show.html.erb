<div class="row">
  <div class="col-xs-12">
    <div class="main-header text-center">
      <h4 class="title">Order Details</h4>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <h4 class="text-sm-center">
      <%= @order.order_number %>
    </h4>
    <div class="status text-sm-center">
      <span class="tag tag-default tag-pill">
        <%= @order.status.humanize %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="flight-wrapper">
        <div class="flight-title">
          <div class="row">
            <div class="col-md-8">
              <%= @order.ori_airport.name %>
              <i class="fa fa-long-arrow-right"></i>
              <%= @order.des_airport.name %>
            </div>
            <div class="col-md-4 text-sm-right">
              <%= @order.depart_flight.code_book %>
            </div>
          </div>
        </div>
        <div class="flight-block depart">
          <div id="flight-depart">
            <p><%= @order.depart_flight.plane_category.name %></p>
            <p><%= @order.depart_flight.time_depart.to_s(:long) %></p>
            <p><%= format_currency(@order.depart_flight.price_total) %></p>
          </div>
        </div>
      </div>
      <% if @order.return_flight %>
        <div class="flight-wrapper">
          <div class="flight-title">
            <div class="row">
              <div class="col-md-8">
                <%= @order.des_airport.name %>
                <i class="fa fa-long-arrow-right"></i>
                <%= @order.ori_airport.name %>
              </div>
              <div class="col-md-4 text-sm-right">
                <%= @order.return_flight.code_book %>
              </div>
            </div>
          </div>
          <div class="flight-block depart">
            <div id="flight-depart">
              <p><%= @order.return_flight.plane_category.name %></p>
              <p><%= @order.return_flight.time_depart.to_s(:long) %></p>
              <p><%= format_currency(@order.return_flight.price_total) %></p>
            </div>
          </div>
        </div>
      <% end %>
      <div class="flight-wrapper">
        <div class="flight-title">
          <p>Passengers X <%= @order.passengers.size.to_s %></p>
        </div>
        <div class="flight-block depart">
          <table width="100%">
            <% @order.passengers.each do |passenger| %>
              <tr>
                <td width="70%">
                  <%= passenger.name %>
                </td>
                <td class="text-sm-center">
                  <%= passenger.category.humanize %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="flight-wrapper">
        <div class="flight-title">
          <p><%= @order.category.humanize %></p>
        </div>
        <div>
          <div class="row">
            <div class="col-sm-6">
              From: <%= @order.ori_airport.name %>
            </div>
            <div class="col-sm-6">
              To: <%= @order.des_airport.name %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p>Depart</p>
              <p><%= format_date(@order.depart_flight.time_depart) %></p>
              <p><%= @order.depart_flight.time_depart.strftime("%H:%M") %></p>
            </div>
            <div class="col-sm-6">
              <p>Return</p>
              <% if @order.return_flight %>
                <p><%= format_date(@order.return_flight.time_depart) %></p>
                <p><%= @order.return_flight.time_depart.strftime("%H:%M") %></p>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <p>Total Price<p>
              <p><%= format_currency(@order.price_total.to_i) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 offset-xs-2" style="text-align: center;">
      <%= link_to "Back", orders_path, class: "btn btn-lg btn-secondary back" %>
    </div>
  </div>
</div>