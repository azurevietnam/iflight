<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label "Full name", class: "form-control-label" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email, class: "form-control-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.radio_button :gender, 'male', :checked => true %> 
    <%= label :gender, 'Male' %>
    <%= f.radio_button :gender, 'female' %>
    <%= label :gender, 'Female' %>
  </div>

  <div class="field form-group">
    <%= f.label "Phone number", class: "form-control-label" %><br />
    <%= f.telephone_field :phone, autofocus: true, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "form-control-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: "form-control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
